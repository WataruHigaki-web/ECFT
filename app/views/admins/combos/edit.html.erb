<h2>セット情報変更</h2>

<%= form_for((@combo),url:admins_combo_path) do |f| %>
  <%= f.label :コンボ名 %>
  <%= f.text_field :name %><br/>
  <%= f.attachment_field :combo_image %>
  <%= f.label :コンボ金額 %>
  <%= f.number_field :price %>円/1日<br/>

  <%= f.label :説明 %>
  <%= f.text_area :introduction %>円/1日<br/>

  <%= f.radio_button :status,true, checked: "checked" %>
  <%= f.label :有効 %>

  <%= f.radio_button :status,false, checked: "checked" %>
  <%= f.label :無効 %><br/>
  <%= f.submit '変更を保存する',class:'btn btn-info' %>
  <% end %>