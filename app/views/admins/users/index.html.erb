<h2>会員一覧画面</h2>
<table class="table table-bordered">
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= link_to user.name,admins_user_path(user) %>
    </td>
    <td><%= user.email %></td>

      <% if user.status %>
        <td>有効</td>
      <% else %>
        <td>無効</td>
      <% end %>
  </tr>
  <% end %>
</table>
</div>
