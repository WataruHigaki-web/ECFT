<h2>商品　編集画面</h2>
<div class="row">
  <%= form_for @product,url: admins_product_path do |f|%>
  <div class="col-xs-6">
    <%= f.attachment_field :product_image %>
  </div>
    <div class="col-xs-6">
      <table class="products-table">
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_field :introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.collection_select :product_kind_id,ProductKind.all, :id, :name %></td>
      </tr>
      <tr>
        <th>在庫数</th>
        <td><%= f.number_field :stock %></td>
      </tr>

      </table>
    </div>
         <div class="text-right">
            <%= f.submit "変更を保存", class:"btn btn-primary" %>
         </div>
  <% end %>
</div>