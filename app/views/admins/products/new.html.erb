<h2>商品新規登録画面</h2>

<div class="row">
  <%= form_with model:@product,url:admins_products_path,local: true do |f| %>
    <div class="col-xs-5">
        <%= f.attachment_field :product_image %>
      </div>
    <div class="col-xs-7">
      <%= f.label :商品名 %>
      <%= f.text_field :name %></br>
      <%= f.label :商品説明 %>
      <%= f.text_area :introduction %></br>
      <%= f.label :ジャンル %>
      <%= f.collection_select :product_kind_id,ProductKind.all,:id,:name %></br>
      <%= f.label :在庫数 %>
      <%= f.number_field :stock %><br/>

    </div>
      <div class="text-right">
      <%= f.submit '新規登録', class: "btn btn-info" %>
      </div>
    <% end %>
</div>