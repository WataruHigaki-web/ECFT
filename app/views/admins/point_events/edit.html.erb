<h2>ジャンル編集画面</h2>

<h3>ジャンル</h3>
<%= form_with model: @point_event,url:admins_point_event_path do |f| %>
  <%= f.label :クーポン名 %>
  <%= f.text_field :name %><br/>

  <%= f.label :ポイント倍数%>
  <%= f.text_field :bonus %><br/>

  <%= f.label :期間 %>
  <%= date_field_tag :start_date %>から<br/>
  <%= date_field_tag :finish_date %>０時まで<br/>

  <%= f.radio_button :status,true %>
  <%= f.label :有効 %>

  <%= f.radio_button :status,false %>
  <%= f.label :無効 %><br/>
  <%= f.submit '変更を保存する',class:'btn btn-info' %>
  <% end %>