<h2>ジャンル編集画面</h2>

<h3>ジャンル</h3>
<%= form_with model: @point_event,url:admins_point_event_path do |f| %>
  <table class="table">
        <tr>
          <th><%= f.label :ポイントイベント名 %></th>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <th><%= f.label :ポイント倍数 %></th>
          <td><%= f.text_field :bonus %>倍</td>
        </tr>

        <tr>
          <th><%= f.label :期間 %></th>
          <td><%= date_field_tag :start_date %>から
              <%= date_field_tag :finish_date %>０時まで
          </td>
        </tr>

        <tr>
          <th>ステータス</th>
          <td>
            <%= f.radio_button :status,true %>
            <%= f.label :有効 %>

            <%= f.radio_button :status,false, checked: "checked" %>
            <%= f.label :無効 %>
          </td>
        </tr>
      </table>
  <%= f.submit '変更を保存する',class:'btn btn-info' %>
  <% end %>