<% if product.favorited_by?(current_user) %>
  <%= link_to'お気に入りを外す',users_product_favorites_path(product_id: product.id,user_id: current_user.id), method: :delete,class: "btn btn-info" %>
<% else %>
  <%= link_to'お気に入り', users_product_favorites_path(product_id: product.id,user_id: current_user.id), method: :post,class: "btn btn-info"  %>
<% end %>