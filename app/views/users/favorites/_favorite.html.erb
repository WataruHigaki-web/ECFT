<% if product.favorited_by?(current_user) %>
  <%= link_to users_product_favorites_path(product_id: product.id,user_id: current_user.id), method: :delete do %>
    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
  <% end %>
<% else %>
  <%= link_to users_product_favorites_path(product_id: product.id,user_id: current_user.id), method: :post do%>
    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
  <% end %>
<% end %>