<h2>情報登録編集</h2>

<%= form_with model:@user,url:users_user_path(@user) do |f| %>
<table>
  <tr>
    <th>profile画像</th>
    <td><%= f.attachment_field :profile_image %></td>
  <tr>
    <th>名前</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= f.text_field :name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :zip_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :phone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
</table>

<%= f.submit '編集を保存',class: "btn btn-primary" %>
<% end %>