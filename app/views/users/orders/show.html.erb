<div class="row">

  <h2>注文履歴詳細</h2>

 <div class="col-xs-7">
  <div class="order-show1">
  <h4>注文情報</h4>
  <table class="table-bordered">
  <tr>
    <th>注文日</th>
    <td width="300">
      <%= @order.created_at.strftime('%Y/%m/%d　%H:%M') %>
    </td>
  </tr>

  <tr>
    <th>受取場所</th>
    <td width="300">
      <%= @order.get_status %>
    </td>
  </tr>

  <tr>
    <th>予定受取時間</th>
    <td></td>
  </tr>

  <tr>
    <th>返却場所</th>
    <td>
      <%= @order.zip_code %></br>
      <%= @order.address %></br>
    </td>å
  </tr>
  <tr>
    <th>予定返却時間</th>
    <td></td>
  </tr>
  <tr>
    <th>クレジット情報</th>
    <td width="300">
      <%#= @order.credit_number %>
    </td>
  </tr>

  <tr>
    <th>貸し出し返却ステータス</th>
    <td width="300">
      <%= @order.status %>
    </td>
  </tr>
  <tr>
    <th>支払いステータス</th>
      <% if @order.pay_status %>
        <td width="300">支払済</td>
      <% else %>
        <td width="300">未支払</td>
      <% end %>
  </tr>

  </table>
  </div>
 </div>
<% @sum = 0 %>
<% @order.order_records.each do |order_record| %>
  <% @sum += (order_record.end_price.to_i) * order_record.quantity.to_i %>
<% end %>

 <div class="col-xs-5">
  <div class="order-show2">
  <h4>請求情報</h4>
 
  <table class="table-bordered">
  <tr>
    <th width="100">商品合計</th>
    <td width="100"><%= @sum %></td>
  </tr>
  <tr>
    <th width="100">利用ポイント</th>
    <td width="100"><%= @order.out_point.point %>pt</td>
  </tr>
  <tr>
    <th width="100">ご請求金額</th>
    <td width="100"><%= @sum += 800 %></td>
  </tr>
  <tr>
    <th width="100">発行ポイント</th>
    <td width="100"><%= @order.create_point %>pt</td>
  </tr>
  </table>
  </div>
 </div>
</div>

<div class="order-show3">
<h4>注文内容</h4>
<table class="table-bordered">
  <tr>
    <th>商品</th>
    <th>価格</th>
    <th>レンタル日数</th>
    <th>個数</th>
    <th>小計</th>
  </tr>

  <% @order.order_records.each do |order_record| %>
  <tr>
    <td width="300">
        <%= order_record.product.name %>
    </td>
    <td width="100">
        <%= (order_record.end_price.to_i) * 1.1.floor %>
    </td>
    <td width="100">
      <%= order_record.quantity.to_i %>
    </td>
    <td width="100">
      <%= ((order_record.end_price.to_i) * 1.1.floor) * order_record.quantity.to_i %>
    </td>
  </tr>
  <% @sum += ((order_record.end_price.to_i) * 1.1.floor) * order_record.quantity.to_i %>
  <% end %>
</table>
</div>